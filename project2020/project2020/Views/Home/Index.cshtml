@{
    ViewData["Title"] = "Home Page";
}
@model project2020.ViewModels.RegisterViewModel
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication4</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/css/index.css" />
    </environment>

</head>
<body>

    <form method="post" asp-controller="Account" asp-action="Register">
        <div asp-validation-summary="ModelOnly"></div>
        <div class='bold-line'></div>
        <div class='container'>
            <div class='window'>
                <div class='overlay'></div>
                <div class='content'>
                    <div class='welcome'>Hello There!</div>
                    <div class='subtitle'>We're almost done. Before using our services you need to create an account.</div>
                    <div class='input-fields'>
                        <input asp-for="Email" placeholder='Email' class='input-line full-width'></input>
                        <span asp-validation-for="Email"></span>
                        <input asp-for="Password" placeholder='Password' class='input-line full-width'></input>
                        <span asp-validation-for="Password"></span>
                        <input asp-for="PasswordConfirm" placeholder='Password Confirmed' class='input-line full-width'></input>
                        <span asp-validation-for="PasswordConfirm"></span>
                    </div>
                    <div><button class='ghost-round full-width'>Create Account</button></div>
                </div>
            </div>
        </div>

    </form>
</body>
</html>